#, no-wrap
msgid "@code{package} (default: @code{darkstat})"
msgstr "@code{package} (par défaut : @code{darkstat})"

#. type: table
#: doc/guix.texi:21260
msgid "The darkstat package to use."
msgstr "Le paquet darkstat à utiliser."

#. type: code{#1}
#: doc/guix.texi:21261
#, no-wrap
msgid "interface"
msgstr "interface"

#. type: table
#: doc/guix.texi:21263
